{
  "apiVersion": "v1",
  "kind": "Pod",
  "metadata": {
    "name": "hello-pod",
    "labels": {
      "app": "hello-api"
    }
  },
  "spec": {
    "containers": [
      {
        "name": "hello-api",
        "image": "khaosdoctor/configmap-node-api",
        "env": [
          { "name": "PORT", "value": "8080" },
          {
            "name": "HELLO_PERSON",
            "valueFrom": {
              "configMapKeyRef": {
                "name": "hello-config",
                "key": "person.name"
              }
            }
          }
        ],
        "ports": [
          {
            "containerPort": 8080,
            "name": "porta-api"
          }
        ]
      }
    ]
  }
}
