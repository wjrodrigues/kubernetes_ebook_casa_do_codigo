{
  "apiVersion": "v1",
  "kind": "Pod",
  "metadata": {
    "name": "hello-pod",
    "labels": {
      "app": "hello-api"
    }
  },
  "spec": {
    "containers": [
      {
        "name": "hello-api",
        "image": "khaosdoctor/configmap-node-api-file",
        "volumeMounts": [
          {
            "name": "config-volume",
            "mountPath": "/pod/config"
          }
        ],
        "env": [
          { "name": "PORT", "value": "8080" },
          { "name": "CONFIG_DIR", "value": "/pod/config" }
        ],
        "ports": [
          {
            "containerPort": 8080,
            "name": "porta-api"
          }
        ]
      }
    ],
    "volumes": [
      {
        "name": "config-volume",
        "configMap": { "name": "hello-config" }
      }
    ]
  }
}
