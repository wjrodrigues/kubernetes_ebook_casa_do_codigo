{
  "apiVersion": "v1",
  "kind": "Pod",
  "metadata": {
    "name": "counter-api",
    "labels": {
      "app": "counter-api"
    }
  },
  "spec": {
    "containers": [
      {
        "name": "counter-api",
        "image": "khaosdoctor/node-counter-api",
        "env": [
          {
            "name": "PORT",
            "value": "8080"
          },
          {
            "name": "COUNTER_DIRECTORY",
            "value": "/etc/counter-volume"
          }
        ],
        "ports": [
          {
            "containerPort": 8080,
            "name": "porta-api"
          }
        ],
        "volumeMounts": [
          {
            "mountPath": "/etc/counter-volume/",
            "name": "counter-volume"
          }
        ]
      }
    ],
    "volumes": [
      {
        "name": "counter-volume",
        "emptyDir": {}
      }
    ]
  }
}
