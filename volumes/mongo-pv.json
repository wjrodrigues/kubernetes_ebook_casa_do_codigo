{
  "apiVersion": "v1",
  "kind": "PersistentVolume",
  "metadata": {
    "name": "mongo-pv",
    "labels": {
      "role": "database"
    }
  },
  "spec": {
    "capacity": {
      "storage": "1Gi"
    },
    "storageClassName": "",
    "volumeMode": "Filesystem",
    "accessModes": [
      "ReadWriteOnce"
    ],
    "persistentVolumeReclaimPolicy": "Delete",
    "local": {
      "path": "/mnt/mongo_data"
    },
    "nodeAffinity": {
      "required": {
        "nodeSelectorTerms": [
          {
            "matchExpressions": [
              {
                "key": "pv-role",
                "operator": "In",
                "values": [
                  "database"
                ]
              }
            ]
          }
        ]
      }
    }
  }
}