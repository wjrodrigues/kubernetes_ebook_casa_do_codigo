{
  "kind": "Pod",
  "apiVersion": "v1",
  "metadata": {
    "name": "mongo-pod",
    "labels": {
      "role": "database"
    }
  },
  "spec": {
    "containers": [
      {
        "name": "mongo-container",
        "image": "mongo",
        "ports": [
          {
            "containerPort": 27017,
            "name": "mongo-port"
          }
        ],
        "volumeMounts": [
          {
            "mountPath": "/data/db",
            "name": "mongo-volume"
          }
        ]
      }
    ],
    "volumes": [
      {
        "name": "mongo-volume",
        "persistentVolumeClaim": {
          "claimName": "mongo-claim"
        }
      }
    ]
  }
}